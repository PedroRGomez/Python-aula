opcao = "sim"
soma = 0
menor = 9999
maior = -9999
while(opcao == "sim"):
  num = int(input("digite o numero:"))
  if (num < menor):
    menor = num
  if (num > maior):
    maior = num
  opcao = input("eseja continuar? [sim/nao]:")
  
print(f"O menor numero foi:{menor}")
print(f"O maior numero foi:{maior}")
